#!/usr/bin/env python3
# -*- coding: utf-8 -*-
import os

PROJECT_MARKER = set(('.git', 'Makefile', '.ropeproject'))


def main():
    """Return project root path."""
    while PROJECT_MARKER.isdisjoint(set(os.listdir())):
        os.chdir(os.pardir)

    print(os.getcwd())


if __name__ == '__main__':
    main()

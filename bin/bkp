#!/bin/bash
# Create backup for file. Adds bkp extension to file.
#
# Example usage:
#   $ bkp file_to_backup

set -e

FILE=$1

main() {
    enforce_usage
    backup_file
}

enforce_usage() {
    if [ -z "$FILE" ]; then
        usage
        exit $E_BADARGS
    fi
}

usage() {
    echo "usage: `basename $0` file_to_backup"
}


backup_file() {
    cp "${FILE}" "${FILE}.bkp"
}

main

# Start week with monday
alias cal='cal -m'

# Navigation
alias l="ls"
alias ls='ls -G --color'
alias ll='ls -lG --color'
alias duh='du -csh'

# Run incognito
alias inc='c -i'
alias gmail='c -u gmail.com'

alias cpb='cd `project-root-path`'

# Add current directory as bin
alias acab='export PATH="$PATH:`pwd`"'

# Git
alias d='git checkout develop'
alias m='git checkout master'
alias gp='git pull'
alias ss='git ss'
alias ga='git add'
alias gd='git diff develop'
alias gm='git diff master'
alias co='git checkout -'

alias chat='tmux attach-session -t chat || tmux new-session -s chat -n irssi irssi \; attach'
alias resume='tmux attach-session -t'
alias be='bootstrap-env.py && work'


alias scratch='tmux attach-session -t scratch || tmux new-session -s scratch -n "SCRATCH" "cd $HOME/scratch/; zsh" \; attach'
alias myip='dig +short myip.opendns.com @resolver1.opendns.com'

alias hvenv='work ~/hvenv'
alias mvim='vim -u ~/.essential.vim'
alias ns='new-scratch'
alias in='ipython notebook'

# fasd
alias v='f -e vim' # quick opening files with vim
alias o='a -e xdg-open' # quick opening files with xdg-open

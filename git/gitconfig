[diff]
[color]
	ui = auto
[alias]
    st = status
    ss = status -s

    ci = commit -v
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    ai = add -i

    fa = fetch --all
    pom = push origin master

    b = branch

    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    # Divergence (commits we added and comits remote added)
    div = divergence

    # Goodness (summary of diff lines added/removed/total)
    gn = goodness
    gnc = goodness --cached

    head = !git l -1

    h = !git head
    hp = "!source ~/.githelpers && show_git_head"

    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all

    r = !git l -30
    ra = !git r --all

    # Flow shortcuts
    fs = flow feature start
    ff = flow feature finish
    fc = flow feature checkout

[merge]
    tool = vimdiff


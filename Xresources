!! Font setup
URxvt.font: xft:DejaVu Sans Mono:size=11
URxvt.boldfont: xft:DejaVu Sans Mono:size=11:style=bold

Xft.dpi:96
Xft.hinting: 1
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.antialias: 1
Xft.rgba: rba

URxvt*borderLess:           false
URxvt*externalBorder:       0
URxvt*internalBorder:       0
URxvt*scrollBar:            false
URxvt*depth:                32

URxvt*cursorBlink:          false
URxvt*inheritPixmap:        false
URxvt*saveLines:            8000
URxvt*scrollTtyOutput:      false
URxvt*scrollTtyKeypress:    true
URxvt*mouseWheelScrollPage: false
URxvt*cutchars:             `'",;@&*=|?()<>[]{}

!! Load perl extension libraries
URxvt.perl-lib: /home/abele/.config/urxvt/lib/

URxvt.matcher.pattern.2:  \\B(/\\S+?):(\\d+)(?=:|$)
URxvt.matcher.launcher.2: vim +$2 $1

URxvt*perl-ext-common: default,matcher,keyboard-select,clipboard
URxvt.url-launcher: /usr/bin/google-chrome-stable
URxvt.matcher.button: 1

URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

!! Keyboard selection
URxvt.keysym.M-a: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search


!! Use clipboard
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard
